<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>I AM SPEED | CARS OFFICIAL STORE</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/cover/">

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Favicons -->
    <link rel="manifest" href="https://getbootstrap.com/docs/5.0/assets/img/favicons/manifest.json">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0e/Cars_logo.svg/1200px-Cars_logo.svg.png">
    <meta name="theme-color" content="#ff0000">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      /* Cars Movie Inspired Colors */
      body {
        background-color: #222222; /* Radiator Springs style background */
        color: white;
      }

      header h3 {
        font-family: 'Lobster', cursive;
        color: #ff4b5c; /* Lightning McQueen Red */
        font-size: 2.5rem;
      }

      .nav-link {
        color: #ffcc00 !important; /* Cars Yellow */
      }

      .nav-link:hover {
        color: #ff4b5c !important; /* Lightning McQueen Red */
      }

      footer {
        background-color: #111111;
        padding: 15px 0;
      }

      .blockquote-footer {
        font-family: 'Arial', sans-serif;
        font-style: italic;
        color: #ffcc00;
      }

      .lead {
        font-size: 1.25rem;
        color: #ffcc00; /* Cars Yellow */
      }

      .navbar-text {
        font-size: 1.2rem;
        color: #ffcc00;
      }

    </style>

    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
  </head>
  <body class="d-flex h-100 text-center text-white bg-dark">
    
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-start mb-0">CARS OFFICIAL STORE</h3>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <span class="navbar-text">
              Join Lightning McQueen in the race to the finish line!
            </span>
            {{#if Authenticated}}
              <a class="nav-link active" aria-current="page" href="/">Orders</a>
              <a class="nav-link" href="/store">Official Store</a>
              <a class="nav-link" href="/user-logout">Logout</a>
              <a class="nav-link active" aria-current="page">Balance: {{Balance}} Points</a>
            {{else}}
              <a class="nav-link active" aria-current="page" href="/">Home</a>
              <a class="nav-link" href="/register-user">Register</a>
              <a class="nav-link" href="/user-login">Login</a>
            {{/if}}
          </nav>
        </div>
      </header>

      <main class="px-3">
        <p class="lead">{{{body}}}</p>
      </main>

      <footer class="mt-auto text-white-50">
        <figure class="text-center">
          <blockquote class="blockquote">
            <p>“Ka-chow!” — Lightning McQueen</p>
          </blockquote>
          <figcaption class="blockquote-footer">
            <cite title="Source Title">Source: Cars (2006)</cite>
          </figcaption>
        </figure>
        <p> SRDNLENCTF 2024 </p>
        <p> Powered by Radiator Springs Racing Team </p>
      </footer>
    </div>

  </body>
</html>
